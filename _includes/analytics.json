{
  "vars" : {
    "gtag_id": "{{ site.analytics_id }}",
    "config" : {
      "{{ site.analytics_id }}": { "groups": "default" },
      "site_speed_sample_rate": 100
    }
  },
  "triggers": {
    "trackPageview": {
      "on": "visible",
      "request": "pageview"
    },
    "amazonOutCuadro": {
      "on": "click",
      "request": "event",
      "selector": ".ga-amz-click-cuadro",
      "vars": {
        "event_name": "amazon cuadro",
        "event_category": "Amazon",
        "event_action": "click",
        "url": "{url}",
        "title": "{title}"
      }
    },
    "amazonOutRow": {
      "on": "click",
      "request": "event",
      "selector": ".ga-amz-click-row",
      "vars": {
        "event_name": "amazon row",
        "event_category": "Amazon",
        "event_action": "click",
        "url": "{url}",
        "title": "{title}"
      }
    },

    "button": {
      "selector": ".amz_cuadro__btn",
      "on": "click",
      "vars": {
        "event_name": "amazon",
        "method": "Cuadro"
      }
    }
  }

}
